<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyTask" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/light_blue</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryContainer">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="colorSurface">@color/light_blue</item>
    </style>

    <!--    Splash Theme-->
    <style name="SplashTheme.MyTask" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.MyTask</item>
    </style>
</resources>