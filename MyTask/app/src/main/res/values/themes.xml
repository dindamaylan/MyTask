<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyTask" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/ThemeOverlay.MyTask.AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/Widget.MyTask.BottomSheetDialog</item>
<!--        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MyTask.MaterialAlertDialog</item>-->
    </style>

    <!--    Splash Theme-->
    <style name="SplashTheme.MyTask" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.MyTask</item>
    </style>
</resources>