    <!--    Layout input Text-->
    <style name="Widget.MyTask.LayoutInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MyTask.LargeComponent</item>
        <item name="boxBackgroundColor">@color/light_blue</item>
        <item name="boxStrokeErrorColor">@color/danger</item>
        <item name="errorTextAppearance">@style/TextAppearance.MyTask.Body.Regular</item>
        <item name="startIconTint">@color/placeholder</item>
        <item name="errorIconTint">@color/danger</item>
        <item name="errorTextColor">@color/danger</item>
    </style>

    <!--    Button-->
    <style name="Widget.MyTask.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.MyTask.H4.Medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/light_blue</item>
    </style>

    <style name="Widget.MyTask.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTask.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MyTask.LargeComponent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.MyTask.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.MyTask.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MyTask.LargeComponent</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <!--    Check Box-->


    <!--    Shape Apperance-->
    <style name="ShapeAppearance.MyTask.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/rounded_large</item>
    </style>

    <style name="ShapeAppearance.MyTask.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/rounded_medium</item>
    </style>

    <style name="ShapeAppearance.MyTask.RoundedTop.BottomSheet" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopRight">@dimen/rounded_medium</item>
        <item name="cornerSizeTopLeft">@dimen/rounded_medium</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!--    Alert Dialog-->
    <style name="ThemeOverlay.MyTask.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">@dimen/rounded_medium</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:background">@color/light_blue</item>
    </style>

    <!--  Bottom App Bar  -->
    <style name="Widget.MyTask.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="elevation">@dimen/elevation_small</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="contentInsetStart">0dp</item>
        <item name="fabCradleMargin">@dimen/size_cradle_fab</item>
        <item name="fabCradleRoundedCornerRadius">@dimen/size_cradle_fab</item>
        <item name="fabCradleVerticalOffset">0dp</item>
        <item name="fabAlignmentMode">center</item>
        <item name="fabAnimationMode">scale</item>
    </style>

    <style name="ThemeOverlay.MyTask.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.MyTask.RoundedTop.BottomSheet</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.MyTask.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ThemeOverlay.MyTask.BottomSheetDialog</item>
    </style>


    <!--  Slider  -->
    <style name="Widget.MyTask.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyTask.Slider</item>
    </style>

    <style name="ThemeOverlay.MyTask.Slider" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/stroke</item>
        <item name="colorOnSurface">@color/primary</item>
    </style>


